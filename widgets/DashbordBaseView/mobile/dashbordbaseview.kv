#:kivy 1.11.1

<DashbordBaseView>:
    id: DashbordBaseView
    size_hint: [1,1]
    
    sidebar_width: 100
    topbar_height: 30

    AppNavigationDrawer:
        size_hint: [1,1] 
        dashboard_screen_manager: dashboard_Screen_manager_id               
        id: Navigation_drawer
        anim_type: "slide_above_simple"
        side_panel_width: root.sidebar_width
        side_panel_positioning: "left" if languagesmanager().bidi()== "ltr" else "right"

        # Sidebar
        BoxLayout:
            id: side_panel
            orientation: "vertical"
            size_hint: [1,1] 
            Button:
                text: _("Main Screen")
                on_release: screensloader().ChangeToScreen("Main")
                font_name: app.theme.font_name
                base_direction: languagesmanager().bidi()

            Button:
                text: _("Home")
                on_release: screensloader().ChangeToScreen("Main", True)
                font_name: app.theme.font_name
                base_direction: languagesmanager().bidi()

            Button:
                text: _("Blog")
                on_release: screensloader().ChangeToScreen("Blog", True)
                font_name: app.theme.font_name
                base_direction: languagesmanager().bidi()

        # Page Content
        BoxLayout:
            id: main_panel
            size_hint: [1,1] 
            width: root.width - root.sidebar_width
            orientation: 'horizontal'
            ScreenManager:
                id: dashboard_Screen_manager_id 
                width:root.width - root.sidebar_width
                height: root.height - root.topbar_height

        



