#:kivy 1.11.1

<DashbordBaseView>:
    id: DashbordBaseView

    sidebar_width: 200
    topbar_height: 30

    StackLayout:
        orientation: "lr-tb" if languagesmanager().bidi()== "ltr" else "rl-tb"
        # Sidebar
        AppNavigationDrawer:
            size_hint: [None,1] 
            width: root.sidebar_width
            BoxLayout:
                orientation: "vertical"
                dashboard_screen_manager: dashboard_Screen_manager_id
                id: Navigation_drawer
                size_hint:[0.15, 1]
                Button:
                    text: _("Main Screen")
                    on_release: screensloader().ChangeToScreen("Main")
                    font_name: app.theme.font_name
                    base_direction: languagesmanager().bidi()

                Button:
                    text: _("Home")
                    on_release: screensloader().ChangeToScreen("Main", True)
                    font_name: app.theme.font_name
                    base_direction: languagesmanager().bidi()
                    
                Button:
                    text: _("Blog")
                    on_release: screensloader().ChangeToScreen("Blog", True)
                    font_name: app.theme.font_name
                    base_direction: languagesmanager().bidi()

        # Page Content
        BoxLayout:
            size_hint: [None,1] 
            width: root.width - root.sidebar_width
            orientation: 'vertical'
            ScreenManager:
                id: dashboard_Screen_manager_id 
                width:root.width - root.sidebar_width
                height: root.height - root.topbar_height






                
    